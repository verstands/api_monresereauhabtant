generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Agents {
  id            String               @id @default(cuid())
  nom           String
  prenom        String
  mdp           String
  id_fonction   String
  statut        String
  email         String               @unique
  fonction      Fonctions            @relation(fields: [id_fonction], references: [id])
  agendas       Agendas[]
  appels        Appels[]
  dossiers      Dossiers[]
  commentaires  Commentaires[]
  agentprospect Prospects[]
  agentpospect  Pospects[]
  notification  Notifications[]
  historique    HistoriqueAffiches[]
  //piecejoint  PieceJoits[]
  //agentmodel    Modelmail[]
  Logdata       Logdata[]
}

model Roles {
  id           String             @id @default(cuid())
  initule      String
  id_privilege ModulesPrivilege[]
}

model Fonctions {
  id      String   @id @default(cuid())
  initule String
  agents  Agents[]

  fonctionmodel     Modelmail[]
  Accesapplications Accesapplications[]
  fonctions         FonctionMenu[]
  menus             Menus[]
  Modules           Modules[]
  CatgorieRole      CatgorieRole[]
}

model Menus {
  id   String @id @default(cuid())
  nom  String
  icon String
  url  String

  fonction     Fonctions[]
  FonctionMenu FonctionMenu[]
}

model FonctionMenu {
  id         String @id @default(cuid())
  idmenu     String
  idfonction String

  fonction Fonctions @relation(fields: [idfonction], references: [id])
  menu     Menus     @relation(fields: [idmenu], references: [id])
}

model Modules {
  id          String @id @default(cuid())
  id_module   String
  id_fonction String

  fonction         Fonctions?         @relation(fields: [id_fonction], references: [id])
  moduleperso      ModulePerso?       @relation(fields: [id_module], references: [id])
  ModulesPrivilege ModulesPrivilege[]
}

model ModulesPrivilege {
  id           String @id @default(cuid())
  id_module    String
  id_privilege String

  moddules   Modules @relation(fields: [id_module], references: [id])
  privileges Roles   @relation(fields: [id_privilege], references: [id])
}

model Agendas {
  id         String @id @default(cuid())
  id_user    String
  id_postect String
  title      String
  start      String
  end        String

  agents  Agents   @relation(fields: [id_user], references: [id])
  pospect Pospects @relation(fields: [id_postect], references: [id])
}

model TypeProduits {
  id          String @id @default(cuid())
  image       String
  titre       String
  description String
  id_work     String

  work       Workflows   @relation(fields: [id_work], references: [id])
  id_produit Capamgnes[]
  pospects   Pospects[]
  produit    Scripts[]
}

model Capamgnes {
  id         String       @id @default(cuid())
  titre      String
  id_produit String
  produit    TypeProduits @relation(fields: [id_produit], references: [id])
  statut     String
  nouveau    String
  nrp        String
  rdv        String
  nonvalide  String
  nrptermine String
  total      String
  distribue  String
  restant    String

  script       Scripts[]
  pospects     Pospects[]
  capagnemodel Modelmail[]
}

model Appels {
  id          String @id @default(cuid())
  id_user     Agents @relation(fields: [id], references: [id])
  id_capamgne String
  direction   String
  statut      String
  dure        String
  numero      String
}

model Raisons {
  id  String @id @default(cuid())
  nom String
}

model Scripts {
  id       String @id @default(cuid())
  titre    String
  contenue String @db.Text()
  position String
  campagne String

  id_produit  TypeProduits @relation(fields: [position], references: [id])
  id_campagne Capamgnes    @relation(fields: [campagne], references: [id])
}

model Provenances {
  id  String @id @default(cuid())
  nom String
}

model Cartes {
  id String @id @default(cuid())
}

model Configurations {
  id String @id @default(cuid())
}

model Dossiers {
  id        String @id @default(cuid())
  nom       String
  adresse   String
  telephone String
  date      String
  email     String
  surface   String
  chauffage String
  id_user   Agents @relation(fields: [id], references: [id])
}

model Villes {
  id  String @id @default(cuid())
  nom String
}

model Archivages {
  id  String @id @default(cuid())
  nom String
}

model TypeChauffages {
  id       String @id @default(cuid())
  intitule String

  typechauffage Prospects[]
}

model TypeRevenus {
  id         String      @id @default(cuid())
  intitule   String
  typerevenu Prospects[]
}

model Commentaires {
  id          String   @id @default(cuid())
  message     String   @db.Text()
  id_user     String
  id_prospect String
  date        String
  user        Agents   @relation(fields: [id_user], references: [id])
  pospect     Pospects @relation(fields: [id_prospect], references: [id])
}

model Presentations {
  id       String @id @default(cuid())
  conteneu String
}

model Questions {
  id       String @id @default(cuid())
  conteneu String
}

model Conclusions {
  id       String @id @default(cuid())
  conteneu String
}

model Directions {
  id  String @id @default(cuid())
  nom String
}

model Installateurs {
  id  String @id @default(cuid())
  nom String
}

model Invalidites {
  id  String @id @default(cuid())
  nom String
}

model Applications {
  id          String              @id @default(cuid())
  titre       String
  image       String
  lien        String
  application Accesapplications[]
}

model Accesapplications {
  id             String @id @default(cuid())
  id_user        String
  id_application String

  Accesapplications Fonctions    @relation(fields: [id_user], references: [id])
  application       Applications @relation(fields: [id_application], references: [id])
}

model Prospects {
  id               String @id @default(cuid())
  id_user          String
  nom              String
  prenom           String
  email            String
  telephone        String
  adresse          String
  ville            String
  codepostal       String
  surface          String
  id_typechauffage String
  id_typerevenu    String

  //piecejoint PieceJoits[]

  agentprospect Agents         @relation(fields: [id_user], references: [id])
  typechauffage TypeChauffages @relation(fields: [id_typechauffage], references: [id])
  typerevenu    TypeRevenus    @relation(fields: [id_typerevenu], references: [id])
}

model Pospects {
  id               String  @id @default(cuid())
  id_user          String
  nom              String
  code             String
  prenom           String
  email            String
  telephone        String
  adresse          String
  ville            String
  codepostal       String
  surface          String
  status           String?
  statusdossier    String
  statuslead       String
  id_typechauffage String
  id_typerevenu    String
  id_campagne      String
  id_produit       String
  typelead         String

  pospect     Agendas[]
  commenatire Commentaires[]
  historique  HistoriqueAffiches[]

  capagnepospect Capamgnes    @relation(fields: [id_campagne], references: [id])
  produitpospect TypeProduits @relation(fields: [id_produit], references: [id])
  agentpospect   Agents       @relation(fields: [id_user], references: [id])
  statutp        Status?      @relation(fields: [status], references: [id], onDelete: SetNull) // Relation optionnelle
}

model Modelmail {
  id            String  @id @default(cuid())
  id_user       String
  active        Boolean
  bccexp        String
  ccexp         String
  contenue      String  @db.Text()
  description   String  @db.Text()
  disnataireexp String
  emailexp      String
  fichier       String
  nom           String
  nomexp        String
  id_campagne   String
  id_fonction   String
  sujet         String

  capagnemodel  Capamgnes @relation(fields: [id_campagne], references: [id])
  //agentmodel    Agents    @relation(fields: [id_user], references: [id])
  fonctionmodel Fonctions @relation(fields: [id_fonction], references: [id])
}

model PieceJoits {
  id          String @id @default(cuid())
  id_user     String
  id_prospect String
  file        String @db.Text()
  date        String
  status      String

  //agents  Agents @relation(fields: [id_user], references: [id])
  //prospcets Prospects @relation(fields: [id_prospect], references: [id])
}

model Notifications {
  id          String @id @default(cuid())
  title       String
  description String
  createdAt   String
  agentId     String

  agent Agents @relation(fields: [agentId], references: [id])
}

model Logdata {
  id             Int      @id @default(autoincrement())
  action         String
  endpoint       String
  user           String
  processingTime Int
  ip             String?
  userAgent      String?
  os             String?
  browser        String?
  isp            String?
  pays           String?
  latitude       Float?
  longitude      Float?
  createdAt      DateTime @default(now())

  agent Agents @relation(fields: [user], references: [id])
}

model HistoriqueAffiches {
  id           String   @id @default(cuid())
  action       String
  userProspect String
  userAgent    String
  createdAt    DateTime @default(now())

  agent    Agents   @relation(fields: [userAgent], references: [id])
  prospect Pospects @relation(fields: [userProspect], references: [id])
}

model EtapeWorkflows {
  id          String @id @default(cuid())
  ordre       String
  couleur     String
  libelle     String
  statut      String
  description String
  id_work     String

  CategorieWorkflows CategorieWorkflows[]
  workflow           Workflows?           @relation(fields: [id_work], references: [id])
  CatgorieRole       CatgorieRole[]
  status       Status[]
}

model CategorieWorkflows {
  id      String @id @default(cuid())
  ordre   String
  libelle String
  statut  String
  idetape String
  workflow EtapeWorkflows? @relation(fields: [idetape], references: [id])
  Status   Status[]
}

model Status {
  id          String @id @default(cuid())
  ordre       String
  couleur     String
  libelle     String
  status      String
  idcategorie String
  id_etape    String

  catworkflow CategorieWorkflows? @relation(fields: [idcategorie], references: [id])
  etape EtapeWorkflows? @relation(fields: [id_etape], references: [id])
  Pospects    Pospects[]
}

model Workflows {
  id      String @id @default(cuid())
  ordre   String
  libelle String
  statut  String

  etape       EtapeWorkflows[]
  typeproduit TypeProduits[]
}

model ModulePerso {
  id      String    @id @default(cuid())
  libelle String
  statut  String
  Modules Modules[]
}

model CatgorieRole {
  id       String @id @default(cuid())
  id_role  String
  id_etape String

  categorie EtapeWorkflows? @relation(fields: [id_etape], references: [id])
  role      Fonctions?      @relation(fields: [id_role], references: [id])
}
